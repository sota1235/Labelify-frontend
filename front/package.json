{
  "name": "labelify-frontend",
  "private": true,
  "version": "1.0.0",
  "description": "Labelify Frontend",
  "main": "index.js",
  "scripts": {
    "start": "npx parcel public/index.html",
    "build": "npx parcel build public/index.html",
    "fix": "npm run tslint --fix && prettier --write ./src/**/*.ts",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint": "npm run tslint && prettier -l ./src/**/*.ts",
    "test": "jest",
    "test:ci": "jest -c ./jest.config.ci.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run fix",
      "npm run lint",
      "git add"
    ]
  }
}
