{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "strict": true,
    "jsx": "react",

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
